{
  "name": "document-engine",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/document-engine/src",
  "tags": ["scope:document-engine"],
  "targets": {
    "build": {
      "executor": "@angular/build:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "baseHref": "/",
        "deployUrl": "/",
        "outputPath": "dist/apps/document-engine",
        "browser": "apps/document-engine/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/document-engine/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/document-engine/public"
          }
        ],
        "styles": ["apps/document-engine/src/styles.scss", "apps/document-engine/src/scss/index.scss"]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb"
            }
          ],
          "fileReplacements": [
            {
              "replace": "apps/document-engine/src/environments/environment.ts",
              "with": "apps/document-engine/src/environments/environment.prod.ts"
            }
          ],
          "sourceMap": false,
          "extractLicenses": true,
          "optimization": true,
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true,
          "fileReplacements": [
            {
              "replace": "apps/document-engine/src/environments/environment.ts",
              "with": "apps/document-engine/src/environments/environment.local.ts"
            }
          ]
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@angular/build:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "document-engine:build:production"
        },
        "development": {
          "buildTarget": "document-engine:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular/build:extract-i18n",
      "options": {
        "buildTarget": "document-engine:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/document-engine/jest.config.ts",
        "tsConfig": "apps/document-engine/tsconfig.spec.json"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "document-engine:build",
        "port": 4200,
        "staticFilePath": "dist/apps/document-engine/browser",
        "spa": true
      }
    }
  }
}
