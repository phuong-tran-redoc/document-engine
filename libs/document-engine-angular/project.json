{
  "name": "@phuong-tran-redoc/document-engine-angular",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/document-engine-angular/src",
  "projectType": "library",
  "release": {
    "version": {
      "manifestRootsToUpdate": ["dist/{projectRoot}"],
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk"
    }
  },
  "tags": ["scope:public"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/document-engine-angular",
        "main": "libs/document-engine-angular/src/index.ts",
        "tsConfig": "libs/document-engine-angular/tsconfig.lib.json",
        "assets": [
          "libs/document-engine-angular/*.md",
          {
            "glob": "**/*",
            "input": "libs/document-engine-angular/src/lib/styles",
            "output": "styles"
          }
        ]
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/document-engine-angular/jest.config.ts"
      }
    }
  }
}
